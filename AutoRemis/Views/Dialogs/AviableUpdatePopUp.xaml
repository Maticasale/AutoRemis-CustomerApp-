                <Label Text="VERSIÓN DISPONIBLE" FontSize="15" Padding="0" TextColor="Black" FontAttributes="Bold" VerticalOptions="Center"/>
                <Frame Padding="5" CornerRadius="20" HorizontalOptions="EndAndExpand" BackgroundColor="#fff9e9" BorderColor="#FFC021">
                    <Label Text="V 1.1.0" FontSize="12" FontAttributes="Bold" TextColor="#FFC021" VerticalOptions="Center"/>
                </Frame>
            </StackLayout>
            <Label Margin="10" LineHeight="1.5" Text="Hay una nueva actualización disponible para mejorar tu experiencia. Si bien no es obligatoria, te recomendamos la instalacion para que puedas disfrutar de las últimas mejoras y correcciones de errores."/>
            <Label Margin="10" LineHeight="1.5" Text="Puedes actualizar ahora o más tarde desde la PlayStore"/>
